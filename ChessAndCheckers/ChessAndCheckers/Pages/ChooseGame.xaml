<Window x:Class="ChessAndCheckers.ChooseGame"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessAndCheckers"
        mc:Ignorable="d"
        Title="ChooseGame" Height="250" Width="300">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Padding="30">
            Select a game to play
        </TextBlock>
        <Button Content="Chess" Margin="10,117,171,71" Click="StartChess"/>
        <Button Content="Checkers" Margin="171,117,10,71"/>
    </Grid>
</Window>

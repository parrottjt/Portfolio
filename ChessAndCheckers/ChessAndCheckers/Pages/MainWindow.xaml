<Window x:Class="ChessAndCheckers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessAndCheckers"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600">
    <Grid Background="DarkSlateGray">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Height="50">
            <Button Name="ChessButton" Content="Chess" Width="100" Margin="10"/>
            <Button Name="CheckersButton" Content="Checkers" Width="100" Margin="10"/>
        </StackPanel>
        <Frame Name="Main" NavigationUIVisibility="Hidden" Margin="50"/>
    </Grid>

</Window>

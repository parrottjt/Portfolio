<Page x:Class="ChessAndCheckers.Pages.ChessBoard"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChessAndCheckers.Pages"
      mc:Ignorable="d" 
        d:DesignHeight="600" d:DesignWidth="600"
  Title="GameBoard">
    
    <Grid Name="Checkerboard">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" Name="a"/>
            <ColumnDefinition Width="*" Name="b"/>
            <ColumnDefinition Width="*" Name="c"/>
            <ColumnDefinition Width="*" Name="d"/>
            <ColumnDefinition Width="*" Name="e"/>
            <ColumnDefinition Width="*" Name="f"/>
            <ColumnDefinition Width="*" Name="g"/>
            <ColumnDefinition Width="*" Name="h"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" Name="eight"/>
            <RowDefinition Height="*" Name="seven"/>
            <RowDefinition Height="*" Name="six"/>
            <RowDefinition Height="*" Name="five"/>
            <RowDefinition Height="*" Name="four"/>
            <RowDefinition Height="*" Name="three"/>
            <RowDefinition Height="*" Name="two"/>
            <RowDefinition Height="*" Name="one"/>
        </Grid.RowDefinitions>
        
        <Image Name="WhitePawn1" Source="/Pages/Images/Chess/Light Pawn.png" Grid.Column="0" Grid.Row="6" Panel.ZIndex="5" OpacityMask="White"/>
        <Image Name="WhitePawn2" Grid.Column="1" Grid.Row="6"/>
        <Image Name="WhitePawn3" Grid.Column="2" Grid.Row="6"/>
        <Image Name="WhitePawn4" Grid.Column="3" Grid.Row="6"/>
        <Image Name="WhitePawn5" Grid.Column="4" Grid.Row="6"/>
        <Image Name="WhitePawn6" Grid.Column="5" Grid.Row="6"/>
        <Image Name="WhitePawn7" Grid.Column="6" Grid.Row="6"/>
        <Image Name="WhitePawn8" Grid.Column="7" Grid.Row="6"/>

        <Image Name="BlackPawn1" Source ="/Pages/Images/Chess/Dark Pawn.png" Grid.Column="0" Grid.Row="1" Panel.ZIndex="5"/>
        <Image Name="BlackPawn2" Grid.Column="1" Grid.Row="1"/>
        <Image Name="BlackPawn3" Grid.Column="2" Grid.Row="1"/>
        <Image Name="BlackPawn4" Grid.Column="3" Grid.Row="1"/>
        <Image Name="BlackPawn5" Grid.Column="4" Grid.Row="1"/>
        <Image Name="BlackPawn6" Grid.Column="5" Grid.Row="1"/>
        <Image Name="BlackPawn7" Grid.Column="6" Grid.Row="1"/>
        <Image Name="BlackPawn8" Grid.Column="7" Grid.Row="1"/>
        <Image x:Name="Background" Source="/Pages/Images/Chess/ChessBoard.png" Panel.ZIndex="1" Grid.RowSpan="9" Grid.ColumnSpan="9"/>
    </Grid>
</Page>
